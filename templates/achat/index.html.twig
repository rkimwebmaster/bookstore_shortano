{% extends 'base.html.twig' %}

{% block title %}Achat index
{% endblock %}

{% block body %}
	<section class="ftco-section ftco-no-pb ftco-partner">
		<div class="container">
			<div class="row">
				<div class="col-md-12 col-lg ftco-animate">
					<h1>Achat index</h1>

					<table class="table">
						<thead>
							<tr>
								<th>Id</th>
								<th>Date</th>
								<th>Etat</th>
								<th>IsLivre</th>
								<th>Quantite</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for achat in achats %}
								<tr>
									<td>{{ achat.id }}</td>
									<td>{{ achat.date ? achat.date|date('Y-m-d') : '' }}</td>
									<td>{{ achat.etat }}</td>
									<td>{{ achat.isLivre ? 'Yes' : 'No' }}</td>
									<td>{{ achat.quantite }}</td>
									<td>
										<a href="{{ path('app_achat_show', {'id': achat.id}) }}">show</a>
										<a href="{{ path('app_achat_edit', {'id': achat.id}) }}">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

					{# <a href="{{ path('app_achat_new') }}">Create new</a> #}

				</div>
			</div>
		</div>
	</section>
{% endblock %}
