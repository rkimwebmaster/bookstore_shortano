{% extends 'base.html.twig' %}

{% block title %}Achat index
{% endblock %}

{% block body %}
	<section class="ftco-section ftco-no-pb ftco-partner">
		<div class="container">
			<div class="row">
				<div class="col-md-12 col-lg ftco-animate">
					<h1>Liste des mes achats </h1>
					<table class="table table-striped table-hover ">
						<thead>
							<tr>
								<th>#</th>
								<th>Date</th>
								<th>Etat</th>
								<th>Quantite</th>
								<th>Montant Total </th>
								<th>actions</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>#</th>
								<th>Date</th>
								<th>Etat</th>
								<th>Quantite</th>
								<th>Montant Total </th>
								<th>actions</th>
							</tr>
						</tfoot>
						<tbody>
							{% for achat in achats %}
								<tr>
									<td>{{ loop.index }}</td>
									<td>{{ achat.date ? achat.date|date('Y-m-d') : '' }}</td>
									<td>
									<span class="badge badge-info">{{ achat.etat }} </span>
									</td>
									<td>{{ achat.quantite }}</td>
									<td>USD {{ achat.montantTotal }}</td>
									<td>
										<a href="{{ path('app_achat_show', {'id': achat.id}) }}">
										<span class="fa fa-search-plus"></span>
										voir</a>
										<a href="{{ path('app_achat_edit', {'id': achat.id}) }}">
										<span class="fa fa-times-circle"></span>
										annuler</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

					{# <a href="{{ path('app_achat_new') }}">Create new</a> #}

				</div>
			</div>
		</div>
	</section>
{% endblock %}
